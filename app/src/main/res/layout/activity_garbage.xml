<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".uiactivties.garbageActivity">

        <Button
            android:id="@+id/location"
            android:layout_width="252dp"
            android:layout_height="71dp"
            android:backgroundTint="@color/orange"
            android:text="Add/edit bin location"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.46" />

        <Button
            android:id="@+id/citizen"
            android:layout_width="252dp"
            android:layout_height="71dp"
            android:backgroundTint="@color/orange"
            android:text="Add/edit citizen info"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:id="@+id/discount"
            android:layout_width="252dp"
            android:layout_height="71dp"
            android:backgroundTint="@color/orange"
            android:text="Discount management"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/citizen"
            app:layout_constraintVertical_bias="0.064" />

        <Button
            android:id="@+id/analytics"
            android:layout_width="252dp"
            android:layout_height="71dp"
            android:backgroundTint="@color/orange"
            android:text="Analytics and records"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount"
            app:layout_constraintVertical_bias="0.093" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="277dp"
            android:layout_height="253dp"
            app:layout_constraintBottom_toTopOf="@+id/location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/garbage_home" />




</androidx.constraintlayout.widget.ConstraintLayout>