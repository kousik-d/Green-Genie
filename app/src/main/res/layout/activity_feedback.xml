<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Feedback"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:gravity="center"
        android:text="Slide how much the bin filled..."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />




    <Spinner
        android:id="@+id/report_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:entries="@array/report_options"
        android:prompt="@string/report_prompt" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Submit" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:layout_height="249dp"
        android:src="@drawable/feeback_img" />

</RelativeLayout>